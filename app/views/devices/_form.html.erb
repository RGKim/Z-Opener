<%= simple_form_for(@device) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :domain %>
    <%= f.input :type %>
    <%= f.input :public_ip %>
    <%= f.input :private_ip %>
    <%= f.input :region %>
    <%= f.input :state %>
    <%= f.input :order_date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
