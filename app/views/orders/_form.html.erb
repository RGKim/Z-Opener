<%= simple_form_for(@image.present? ? [@order.image, @order] : @order) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    <%= f.input :hostname %>
    <%= f.input :domain %>
    <%= f.input :location, collection: [1555995] %>
    <%= f.input :os, :collection => @OperatingSystems %>
    <%= f.input :usehourlypricing %>
    <%= f.input :cpu %>
    <%= f.input :ram %>
    <%= f.input :first_disk %>
    <%= f.input :second_disk %>
    <%= f.input :bandwidth %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
